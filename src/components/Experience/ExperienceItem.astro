---
import { t } from "i18next";
import ArrowRightIcon from "../icons/ArrowRightIcon.astro";


interface Props{
    title: string, 
    description: string, 
    date: string, 
    link?: string
    linkText?: string
}

const {title, description, date, link, linkText} = Astro.props

---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-red-400"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>
<h3 class="text-lg font-semibold text-white-900 dark:text-white">{title}</h3>
<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{description}</p>
{
    link && (<a href={link} class="inline-flex items-center px-4 py-2 text-sm font-medium text-black bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-white-800 dark:text-gray-800 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700 ">{t("experienceLabels.knowMore")} {linkText} <ArrowRightIcon/></a>)
}
